generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  email    String @unique
  name     String
  password String
  lists    List[]

  @@map("users")
}

model List {
  listID         String    @id @default(uuid())
  name           String
  subjectsLength Int       @default(0)
  subjects       Subject[]

  user   User   @relation(fields: [userID], references: [id])
  userID String

  @@map("lists")
}

model Subject {
  subjectID String   @id @default(uuid())
  name      String
  date      DateTime @default(now())
  amount    Int
  notes     String
  tags      Tags[]

  List       List?   @relation(fields: [listListID], references: [listID])
  listListID String?

  @@map("subjects")
}

model Tags {
  tagID String @id @default(uuid())
  name  String
  color String

  Subject   Subject? @relation(fields: [subjectID], references: [subjectID])
  subjectID String?

  @@map("tags")
}
